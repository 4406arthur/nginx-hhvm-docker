server {
    listen 80;
    server_name localhost;
    root /var/www/public;
    autoindex on;
    index index.php;

    location / {
      try_files $uri $uri/ /index.php;

    }

    location ~ \.(hh|php)$ {
        fastcgi_pass   127.0.0.1:9000;
        fastcgi_param  HTTP_PROXY "";
        fastcgi_param  SCRIPT_FILENAME $document_root$fastcgi_script_name;
        include        fastcgi_params;
    }

    # Deny other request
    location ~ \.(hh|php)$ {
      return 444;
    }
}
